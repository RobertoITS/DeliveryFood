<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AccountFrag">

    <!--Shapes only-->
    <LinearLayout
        android:layout_width="@dimen/shape_home_w"
        android:layout_height="@dimen/shape_home_h"
        android:background="@drawable/rectangle_shape"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="@dimen/ellipse_home_w"
        android:layout_height="@dimen/ellipse_home_h"
        android:background="@drawable/ellipse_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/ellipse_home_s_w"
        android:layout_height="@dimen/ellipse_home_s_h"
        android:background="@drawable/ellipse_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".1"
        app:layout_constraintHorizontal_bias=".3">
    </LinearLayout>
    <!--End shapes-->

    <ImageButton
        android:id="@+id/back"
        android:layout_width="@dimen/width_height_50dp"
        android:layout_height="@dimen/width_height_50dp"
        android:background="@drawable/image_button_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginTop="@dimen/margin_30dp"
        android:layout_marginStart="@dimen/margin_20dp"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="@color/white"
        android:textSize="@dimen/text_20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/back"
        app:layout_constraintEnd_toStartOf="@+id/ib"
        android:layout_marginTop="@dimen/margin_40dp"/>


    <ImageButton
        android:id="@+id/ib"
        android:layout_width="@dimen/width_height_50dp"
        android:layout_height="@dimen/width_height_50dp"
        android:src="@drawable/ic_notification"
        android:background="@drawable/image_button_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_30dp"
        android:layout_marginEnd="@dimen/margin_20dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv1"
        android:layout_width="@dimen/width_height_120dp"
        android:layout_height="@dimen/width_height_120dp"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".1"
        app:cardCornerRadius="60dp"
        android:elevation="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/profile"
            android:scaleType="centerCrop"
            />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roberto Aqueveque"
        android:textSize="@dimen/text_25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/cv1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_8dp"/>

    <ListView
        android:id="@+id/lv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_marginHorizontal="@dimen/margin_15dp"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/margin_50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>